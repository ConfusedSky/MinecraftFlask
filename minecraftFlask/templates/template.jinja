<!doctype html>

<html>
<head>
<title>UCI Triangle Minecraft Server Dashboard</title>

<style>

.header {
    overflow: hidden;
    border-left: 6px solid red;
    background-color: black;
    font-size: 20px;
    color: white;
    position: fixed;
    top: 0;
    width: 100%
}

.main {
    margin-top: 30px;
}

#messages { list-style-type: none; margin: 0; padding: 0; }
#messages li { padding: 5px 10px; }
#messages li:nth-child(odd) { background: #eee; }

.inputMessage {
  border: 5px solid #000;
  bottom: 0;
  height: 30px;
  left: 0;
  outline: none;
  padding-left: 5px;
  position: absolute;
  right: 0;
  width: 100%;
}

</style>
</head>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.min.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script>
    function addMessage(msg) {
        $('#messages').append($('<li>').text(msg));
        //window.scrollTo(0, document.body.scrollHeight);
        window.scrollTo({top: document.body.scrollHeight, behavior: "smooth"});
    }
    function headerDown() {
        $("#headerText").text("Minecraft server currently down");
    }
    function updateHeader() {
        $.getJSON("{{ url_for('index.status') }}", function(data){
            if(data.serverUp)
            {
                text = "The server has the following players online (" +
                    data.players.online + "/" + data.players.max +
                    "): " + data.players.names.join(', ');
                $("#headerText").text(text);
            }
            else
            {
                headerDown();
                $('#messages').empty();
            }
        });
    }
    function loadChat() {
        $('#messages').empty();
        $.getJSON("{{ url_for('index.status') }}", function(data){
            if(data.serverUp)
            {
                $.getJSON("{{ url_for('index.messages') }}", function(data){
                    for(i = 0; i < data.messages.length; i++)
                    {
                        addMessage(data.messages[i]);
                    }
                });
            }
        });
    } 
    $(function () {
        var socket = io();
        socket.on('server connect', function(){
            updateHeader();
        });
        socket.on('server log', addMessage);
        socket.on('server disconnect', function(){
            headerDown();
            $('#messages').empty();
        });
        socket.on('update header', updateHeader);
        socket.on('disconnect', function() {
            //$('#messages').append($('<li>').text("Server disconnected"));
        });
        socket.on('connect', function() {
            //$('#messages').append($('<li>').text("Server connected"));
            updateHeader();
            loadChat();
            //window.scrollTo(0, document.body.scrollHeight);
            window.scrollTo({top: document.body.scrollHeight, behavior: "smooth"});
        });
        function sendMessage() {
            var message = $('.inputMessage').val();
            $('.inputMessage').val('');
            socket.emit('minecraft message', message);
        }
        $(window).keydown(event => {
            if(!(event.ctrlKey || event.metaKey || event.altKey)) {
                $(".inputMessage").focus();
            }
            if(event.which === 13) {
                sendMessage();
            }
        });
    });
</script>
<body>
<div class="header">
    &nbsp;
    
    <span id=headerText>Connecting to chat server...</span>
<!--
    {% if serverUp %}
        The server has the following players online 
        ({{ query.players.online }}/{{ query.players.max }}): 
        {{ ", ".join(query.players.names) }}
    {% else %}
        Minecraft server currently down
    {% endif %}
-->
</div>
<div class="main">
    <p>
    <ul id="messages">
    </ul>
    <input class="inputMessage" type="text"/>
</div>
</body>
</html>
